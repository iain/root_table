%h2= t(".header", :table => model.human_name(:count => @collection.size))


%ul{:id => table.underscore}
  - @collection.each do |object|
    %li[object]
      - if root_table.acts_as_list?
        %small.handle= t(".handle")
      %strong&= object.send(root_table.field)
      %small.actions
        = link_to_edit_root_table_item(table, object.id)
        = link_to_delete_root_table_item(table, object.id)

- if root_table.acts_as_list?
  = sortable_element table.underscore, :url => sort_root_table_root_table_contents_path, :handle => "handle"
  - content_for(:head) do
    = javascript_include_tag "prototype", "effects", "dragdrop", :cache => "root_table"
  %style{:type => "text/css", :media => "screen"}
    :sass
      .handle
        :cursor move

%h3= t(".actions")

%ul.actions
  %li= link_to t(".new", :table => model.human_name), new_root_table_root_table_content_path(table)
  %li= link_to t(".back"), root_tables_path
